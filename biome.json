{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true,
    "include": ["packages/"]
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf",
      "semicolons": "always",
      "trailingCommas": "all",
      "quoteStyle": "double",
      "lineWidth": 80
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf"
    }
  },
  "formatter": {
    "enabled": true,
    "include": ["packages/", "tsconfig.json", "biome.json"],
    "ignore": ["node_modules/"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "noUnusedVariables": "warn",
        "noUnusedImports": "warn",
        "noUnusedLabels": "warn"
      },
      "complexity": {
        "noForEach": "off",
        "noBannedTypes": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noArrayIndexKey": "warn"
      },
      "a11y": {
        "useKeyWithClickEvents": "warn",
        "useKeyWithMouseEvents": "warn",
        "noSvgWithoutTitle": "warn",
        "useValidAnchor": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn"
      },
      "style": {
        "noNonNullAssertion": "warn"
      }
    },
    "include": ["packages/", "tsconfig.json", "biome.json"],
    "ignore": ["node_modules/"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "main",
    "useIgnoreFile": true
  }
}
